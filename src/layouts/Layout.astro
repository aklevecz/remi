---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
const isHome = new URL(Astro.request.url).pathname === "/";
const isTats = new URL(Astro.request.url).pathname === "/tattoos";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/images/lambheads.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    {!isHome && <Header isTats={isTats} />}
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    --yellow: #f2eb03;
    --green: #8bcf85;
    --orange: #ea5001;

    --primary-color: var(--green);
    --secondary-color: var(--orange);

    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
  }
  html {
    font-family: system-ui, sans-serif;
    color: var(--secondary-color);
    background: var(--primary-color);
    background-size: 224px;
    margin: 0px;
    padding: 0px;
    transition:
      color 0.5s,
      background 0.5s;
  }
  body {
    margin: 0;
    padding: 0;
  }
  html.black {
    background: black;
  }
  html.black a {
    color: black;
  }
  main {
    margin: 1rem;
    min-height: 82vh;
  }
  li {
    font-size: 1.5rem;
    list-style-type: none;
  }
  h1, h2 {
    margin: 0px;
  }
  h1 {
    margin: 0px;
    font-size: 3rem;
  }
  p {
    font-size: 1.5rem;
  }
  a {
    color: var(--secondary-color);
    transition:
      filter 0.5s,
      color 0.5s;
    text-decoration: none;
    filter: invert(0);
  }

  a:hover {
    filter: invert(1);
  }

  footer {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: bold;
    height: 100px;
    color: var(--primary-color);
    background-color: var(--secondary-color);
  }

  button {
    cursor: pointer;
  }

  .flex {
    display: flex;
  }
  .flex-col {
    flex-direction: column;
  }
  .items-center {
    align-items: center;
  }
  .gap-4 {
    gap: 1rem;
  }
</style>
