---
let { default: innerHTML } = await import(`./svgs/remifrogologo.svg?raw`);
const {color, id} = Astro.props;
console.log(typeof innerHTML)
const pathFill =  color ? color : 'var(--secondary-color)';
innerHTML = innerHTML.replace('__PATH_FILL__', pathFill);
innerHTML = innerHTML.replace(/__ID__/g, id || 'base');
const viewBox = "500 400 2000 1200"
---
<Fragment set:html={innerHTML}/>

<style is:global>
  svg[data-remi-logo] {
    width:100%;
    height:100%;
    max-width: 700px;
    display: block;
    margin: 0 auto;
  }
