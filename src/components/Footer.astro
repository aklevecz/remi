---
import config from "../lib/config"
import RemiFrogoLogo from "./RemiFrogoLogo.astro";
import InstagramIcon from "./icons/instagramIcon.astro";

const isHome = new URL(Astro.request.url).pathname === "/";
---

<footer data-footer>
  <div class="link-container">
    <a href="/about">About</a>
    <a href="/art">Art</a>
    <a href="/tattoos">Tattoos</a>
    <a target="_blank" class="mobile" href={config.remiInstagram}><InstagramIcon colorVariant="primary" /></a>
    <a target="_blank" class="desktop" href={config.remiInstagram}><InstagramIcon colorVariant="primary" sizeVariant="md" /></a>
  </div>
  <div class="logo-container"><RemiFrogoLogo id="footer" color="var(--primary-color)" /></div>
</footer>

<style define:vars={{opacity: isHome ? "0" : "1"}}>
  footer {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: bold;
    color: var(--primary-color);
    background-color: var(--secondary-color);
    opacity: var(--opacity);
  }

  .link-container {
    flex: 1 0 auto;
    display: flex;
    justify-content: space-around;
    align-items: center;
    max-width: 768px;
  }

  footer .link-container a {
    font-size: 1rem;
    color: var(--primary-color);
  }

  .logo-container {
    padding: 1rem;
    width: 50px;
    height: 50px;
  }

  .desktop {
    display: none;
  }

  @media screen and (min-width: 768px) {
    footer .link-container a {
      font-size: 2rem;
    }
    .logo-container {
      padding: 1rem;
      width: 100px;
      height: 100px;
    }
    .mobile {
      display: none;
    }
    .desktop {
      display: block;
    }
  }
</style>
