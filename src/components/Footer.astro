---
import RemiFrogoLogo from "./RemiFrogoLogo.astro";
import InstagramIcon from "./icons/instagramIcon.astro";
---

<footer>
  <div class="link-container">
    <a href="/about">About</a>
    <a href="/art">Art</a>
    <a href="/tattoos">Tattoos</a>
    <a><InstagramIcon colorVariant="primary" /></a>
  </div>
  <div class="logo-container"><RemiFrogoLogo id="footer" color="var(--primary-color)" /></div>
</footer>

<style>
  footer {
    display: flex;
  }
  .link-container {
    flex: 1 0 auto;
    display: flex;
    justify-content: space-around;
    align-items: center;
    max-width: 768px;
  }

  footer .link-container a {
    font-size: 1rem;
    color: var(--primary-color);
  }

  .logo-container {
    padding: 1rem;
    width: 50px;
    height: 50px;
  }

  @media screen and (min-width: 768px) {
    footer .link-container a {
      font-size: 2rem;
    }
    .logo-container {
      padding: 1rem;
      width: 100px;
      height: 100px;
    }
  }
</style>
